<!DOCTYPE html>
<html>
  <head>
    <title>{%= title %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="{%= baseUrl %}/styles.css" />
    {% if (options.content.head) { %} {%- options.content.head %} {% } %}
  </head>

  <body>
    {%- include('header') %}
    <main>
      {% if (content) { %}
      {%- content %}
      {% } else { %}
      {% if (user) { %}
      <p>
        <h4>Full name</h4>
        {%= user.displayName %}
      </p>

      <p>
        <h4>E-mail</h4>
        {%= user.email %}
      </p>

      <p>
        <h4>Token</h4>
        <input type="text" readonly" value="{%= user.token %}" />
      </p>
      {% } %}
      {% } %}
    </main>

    {% if (livereload) { %}
    <script async defer src="http://localhost:35729/livereload.js"></script>
    {% } %} {%- include('footer') %} {% if (options.content.scripts) { %} {%- options.content.scripts %} {% }
    %}
  </body>
</html>
